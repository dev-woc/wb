generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id                String  @id
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  User              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model ClothingItem {
  id              String           @id
  userId          String
  designerId      String?
  name            String
  category        String
  color           String
  brand           String?
  season          String?
  occasion        String?
  imageUrl        String
  tags            String
  isDesignerPiece Boolean          @default(false)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime
  Designer        Designer?        @relation(fields: [designerId], references: [id])
  User            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  CollectionItem  CollectionItem[]
  OutfitItem      OutfitItem[]
}

model Collection {
  id             String           @id
  designerId     String
  name           String
  description    String
  coverImage     String
  season         String?
  year           Int?
  isPublished    Boolean          @default(false)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime
  Designer       Designer         @relation(fields: [designerId], references: [id], onDelete: Cascade)
  CollectionItem CollectionItem[]
}

model CollectionItem {
  id             String       @id
  collectionId   String
  clothingItemId String
  ClothingItem   ClothingItem @relation(fields: [clothingItemId], references: [id], onDelete: Cascade)
  Collection     Collection   @relation(fields: [collectionId], references: [id], onDelete: Cascade)

  @@unique([collectionId, clothingItemId])
}

model Designer {
  id           String         @id
  userId       String         @unique
  brandName    String
  bio          String
  website      String?
  instagram    String?
  followers    Int            @default(0)
  verified     Boolean        @default(false)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime
  ClothingItem ClothingItem[]
  Collection   Collection[]
  User         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Follow {
  id                            String   @id
  followerId                    String
  followingId                   String
  createdAt                     DateTime @default(now())
  User_Follow_followerIdToUser  User     @relation("Follow_followerIdToUser", fields: [followerId], references: [id], onDelete: Cascade)
  User_Follow_followingIdToUser User     @relation("Follow_followingIdToUser", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
}

model Like {
  id        String   @id
  userId    String
  outfitId  String
  createdAt DateTime @default(now())
  Outfit    Outfit   @relation(fields: [outfitId], references: [id], onDelete: Cascade)
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, outfitId])
}

model Outfit {
  id          String       @id
  userId      String
  name        String
  description String?
  occasion    String?
  season      String?
  imageUrl    String?
  likes       Int          @default(0)
  saves       Int          @default(0)
  isPublic    Boolean      @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime
  Like        Like[]
  User        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  OutfitItem  OutfitItem[]
  Save        Save[]
}

model OutfitItem {
  id             String       @id
  outfitId       String
  clothingItemId String
  ClothingItem   ClothingItem @relation(fields: [clothingItemId], references: [id], onDelete: Cascade)
  Outfit         Outfit       @relation(fields: [outfitId], references: [id], onDelete: Cascade)

  @@unique([outfitId, clothingItemId])
}

model Save {
  id        String   @id
  userId    String
  outfitId  String
  createdAt DateTime @default(now())
  Outfit    Outfit   @relation(fields: [outfitId], references: [id], onDelete: Cascade)
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, outfitId])
}

model Session {
  id           String   @id
  sessionToken String   @unique
  userId       String
  expires      DateTime
  User         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                              String         @id @default(cuid())
  email                           String         @unique
  emailVerified                   DateTime?
  password                        String?
  name                            String?
  role                            String         @default("user")
  avatar                          String?
  bio                             String?
  createdAt                       DateTime       @default(now())
  updatedAt                       DateTime       @updatedAt
  Account                         Account[]
  ClothingItem                    ClothingItem[]
  Designer                        Designer?
  Follow_Follow_followerIdToUser  Follow[]       @relation("Follow_followerIdToUser")
  Follow_Follow_followingIdToUser Follow[]       @relation("Follow_followingIdToUser")
  Like                            Like[]
  Outfit                          Outfit[]
  Save                            Save[]
  Session                         Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
